{
	"name": "Page Redder",
	"description": "Make the current page red",
	"version": "2.0",
	"permissions": [
		"activeTab"
	],
	"content_scripts": [
        {
            "matches": [
                "*://*/*"
            ],
            "js": ["content.js"]
        }
    ],
    "background": {
		"scripts": [
			"background.js"
		],
		"persistent": false
	},
	"browser_action": {
		"default_title": "Make this page red"
	},
	"manifest_version": 2
}